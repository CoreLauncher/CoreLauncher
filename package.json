{
	"name": "corelauncher",
	"version": "1.0.0-beta.1",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*",
		"plugins/*",
		"projects/*"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@types/bun": "^1.2.20",
		"embedded-postgres": "^17.5.0-beta.15",
		"husky": "^9.1.7",
		"rcedit": "^4.0.1"
	},
	"peerDependencies": {
		"typescript": "^5.9.2"
	},
	"scripts": {
		"prepare": "husky",
		"postinstall": "bun run scripts/patch-webview.ts",
		"lint": "bun run biome check --fix",
		"dev": "bun run --watch ./projects/corelauncher/index.ts",
		"bundle": "bun build --target=bun --outdir .bundle ./projects/corelauncher/index.ts",
		"compile": "bun build --target=bun --outfile CoreLauncher.exe --sourcemap=inline --compile ./projects/corelauncher/index.ts"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@embedded-postgres/windows-x64",
		"registry-js"
	],
	"dependencies": {},
	"patchedDependencies": {}
}
