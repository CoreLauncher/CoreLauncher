{
	"name": "corelauncher",
	"version": "1.0.0-beta.1",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*",
		"plugins/*",
		"projects/*"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/bun": "^1.2.21",
		"husky": "^9.1.7",
		"rcedit": "^4.0.1"
	},
	"peerDependencies": {
		"typescript": "^5.9.2"
	},
	"scripts": {
		"prepare": "husky",
		"postinstall": "bun run scripts/patch-webview.ts",
		"lint": "bun run biome check --fix",
		"dev": "bun run --watch ./projects/corelauncher/index.ts",
		"bundle": "bun build --target=bun --sourcemap=inline --root . --entry-naming=entrypoint-[hash].[ext] --chunk-naming=chunk-[hash].[ext] --asset-naming=asset-[hash].[ext] --outdir .bundle  ./projects/corelauncher/index.ts",
		"compile": "bun build --target=bun --sourcemap=inline --root . --entry-naming=entrypoint-[hash].[ext] --chunk-naming=chunk-[hash].[ext] --asset-naming=asset-[hash].[ext] --outfile corelauncher --compile ./projects/corelauncher/index.ts"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"native-reg",
		"protobufjs"
	],
	"dependencies": {},
	"patchedDependencies": {}
}
