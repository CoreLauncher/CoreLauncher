<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0-windows</TargetFramework>
        <OutputType>Library</OutputType>
        <SelfContained>true</SelfContained>
        <UseNativeAot>true</UseNativeAot>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <UseWindowsForms>true</UseWindowsForms>
        <UseNativeAot>true</UseNativeAot>
        <SelfContained>true</SelfContained>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    </PropertyGroup>

    <Target Name="CopyTrayDll" AfterTargets="Publish" Condition="Exists('$(PublishDir)tray.dll')">
        <Copy SourceFiles="$(PublishDir)tray.dll" DestinationFiles="tray.dll" />
    </Target>
</Project>

<!--Build command: dotnet publish -c Release -r win-x64 /p:PublishAot=true-->
